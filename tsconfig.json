{
	"include": ["src/**/*", "tests/**/*.ts"],
	"exclude": ["**/node_modules/**", "dist"],
	"compilerOptions": {
		"rootDir": ".",
		"strict": true,
		"allowJs": true,
		"maxNodeModuleJsDepth": 3,
		"lib": ["ES2023"],
		"module": "nodenext",
		"moduleResolution": "nodenext",
		"esModuleInterop": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"noEmit": true
	}
}
