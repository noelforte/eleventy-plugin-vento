{
	"files.associations": {
		"*.json.liquid": "json",
		"*.yaml.liquid": "yaml",
		"*.md.liquid": "markdown",
		"*.js.liquid": "liquid-javascript",
		"*.css.liquid": "liquid-css",
		"*.scss.liquid": "liquid-scss",
		"*.htmlsnap": "html"
	},
	"eslint.enable": true,
	"editor.codeActionsOnSave": {
		"source.sortImports": "always"
	}
}
